{
	"name": "pb-option-builder",
	"version": "0.0.2",
	"description": "Option builder for the official PocketBase SDK that also helps with typing the response",
	"author": "satohshi",
	"repository": {
		"type": "git",
		"url": "https://github.com/satohshi/pocketbase-option-builder"
	},
	"license": "MIT",
	"keywords": [
		"pocketbase",
		"typescript",
		"option",
		"types",
		"schema"
